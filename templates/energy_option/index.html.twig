{% extends 'base.html.twig' %}

{% block title %}EnergyOption index{% endblock %}

{% block body %}
    <h1>EnergyOption index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for energy_option in energy_options %}
            <tr>
                <td>{{ energy_option.id }}</td>
                <td>{{ energy_option.name }}</td>
                <td>
                    <a href="{{ path('app_energy_option_show', {'id': energy_option.id}) }}">show</a>
                    <a href="{{ path('app_energy_option_edit', {'id': energy_option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_energy_option_new') }}">Create new</a>
{% endblock %}
